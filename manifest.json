{
  "manifest_version": 2,
  "name": "Torchbox project helper",
  "version": "1.0",
  "description": "Helper functions for torchbox codebase projects.",
  "permissions": ["declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "tbx_logo_19.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ]
}
